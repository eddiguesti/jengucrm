{
  "name": "jengu-cloudflare",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "tail": "wrangler tail",
    "db:migrate": "wrangler d1 execute jengu-crm --file=./migrations/001_schema.sql --remote",
    "db:migrate:local": "wrangler d1 execute jengu-crm --file=./migrations/001_schema.sql --local",
    "db:seed": "wrangler d1 execute jengu-crm --file=./migrations/002_seed.sql --remote",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "full-deploy": "bash scripts/deploy.sh"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "vitest": "^1.6.0",
    "wrangler": "^3.91.0"
  }
}
